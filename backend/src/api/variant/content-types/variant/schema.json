{
  "kind": "collectionType",
  "collectionName": "variants",
  "info": {
    "singularName": "variant",
    "pluralName": "variants",
    "displayName": "Variant",
    "description": "Product variants with different sizes/prices"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "sku": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "active": {
      "type": "boolean",
      "default": true
    },
    "inventory": {
      "type": "integer"
    },
    "product": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product",
      "inversedBy": "variants"
    }
  }
}
